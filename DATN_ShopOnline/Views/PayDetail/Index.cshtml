
@{
    ViewBag.Title = "Chi tiết thanh toán";
    Layout = "~/Views/Shared/LayoutShop.cshtml";
}

@{
    ViewBag.Title = "Thanh Toán";
    Layout = "~/Views/Shared/LayoutShop.cshtml";
}


<div class="breadcrumbs_area sanpham" style="background:rgba(39,174,96,.1);height:100px;display:none">
    <div class="row">
        <div class="col-12">
            <div class="breadcrumb_content">
                <div class="row">
                    <div class="col-2" style="text-align:center">
                        <span style="color:green;margin-top:18px;" class="fa fa-check-circle fa-5x"></span>
                    </div>
                    <div class="col-10">
                        <div class="row">
                            <p style="color:green;font-size:25px;line-height:50px;">Cảm ơn bạn đã đặt hàng của bạn. Chúng tôi sẽ liên lạc sớm để xác nhận!</p>
                        </div>
                        <div class="row">
                            <p style="font-size:20px">Chi tiết đơn hàng sẽ được gửi đến Email của bạn sau khi chúng tôi xử lý đơn hàng.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="Checkout_section sanpham" style="display:none">
    <div class="checkout_form">
        <div class="row">
            
            <div class="col-lg-6 col-md-6">
                <form action="#">
                    <h3 style="text-align:center">THÔNG TIN ĐƠN HÀNG</h3>
                    <div class="order_table table-responsive mb-30">
                        <table class="table table-striped table-hover table-bordered">

                            <tbody>
                                <tr>
                                    <td style="text-align:left;"><p style="margin-left:20px;">Mã đơn</p> </td>
                                    <td style="font-weight:bold" ng-bind="MaDB"></td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;"><p style="margin-left:20px;">Ngày đặt</p> </td>
                                    <td style="font-weight:bold" ng-bind="NgayDat"></td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;"><p style="margin-left:20px;">Phương thức thanh toán</p> </td>

                                    <td style="font-weight:bold" ng-bind="PhuongThuc"></td>
                                </tr>
                                <tr ng-show="(PhuongThuc=='Thanh toán tiền mặt')?true:false">
                                    <td style="text-align:left;"><p style="margin-left:20px;">Phí ship</p> </td>
                                    <td style="font-weight:bold;color:red"  ng-bind="Phiship|number:0"></td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;"><p style="margin-left:20px;">Trạng thái thanh toán</p> </td>
                                    <td style="font-weight:bold" ng-bind="TrangThaiThanhToan"></td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;"><p style="margin-left:20px;">Trạng thái đơn hàng </p> </td>
                                    <td style="font-weight:bold" ng-bind="TrangThaiDonHang"></td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;"><p style="margin-left:20px;">Tổng tiền </p> </td>
                                    <td style="font-weight:bold;color:red" ng-bind="TongTien|number:0"></td>
                                </tr>
                            </tbody>

                        </table>
                    </div>
                  
                </form>
            </div>
            <div class="col-lg-6 col-md-6">
                <form action="#">
                    <h3 style="text-align:center">THÔNG TIN KHÁCH HÀNG</h3>

                    <div class="order_table table-responsive mb-30">
                        <table class="table table-striped table-hover table-bordered">

                            <tbody>
                                <tr>
                                    <td style="text-align:left;"><p style="margin-left:20px;">Tên khách hàng </p> </td>
                                    <td style="font-weight:bold" ng-bind="TenKH"></td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;"><p style="margin-left:20px;">Số điện thoại </p> </td>
                                    <td style="font-weight:bold" ng-bind="SDT"></td>
                                </tr>
                                <tr>
                                    <td style="text-align:left;"><p style="margin-left:20px;">Địa chỉ </p> </td>
                                    <td style="font-weight:bold" ng-bind="DiaChi"></td>
                                </tr>                                
                            </tbody>

                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="checkout_form">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <form action="#">
                    <h3 style="text-align:center">THÔNG TIN SẢN PHẨM</h3>

                    <div class="order_table table-responsive mb-30">
                        <table class="table table-striped table-bordered">

                            <tbody>
                                <tr style="font-weight:bold">
                                    <td>Tên sản phẩm </td>
                                    <td >Hình ảnh</td>
                                    <td>Số lượng </td>
                                    <td>Đơn giá</td>
                                    <td>Thành tiền</td>
                                </tr>
                                <tr ng-repeat="list in ListCTDH">
                                    <td style="text-align:left;"><p style="margin-left:20px;" ng-bind="list.SANPHAM.TenSP"> </p> </td>
                                    <td><img ng-src="/img/{{list.SANPHAM.HinhAnh}}" width="50"/></td>
                                    <td ng-bind="list.SoLuong"></td>
                                    <td style="color:red" ng-bind="list.SANPHAM.GiaBan|number:0"></td>
                                    <td style="color:red" ng-bind="(list.SoLuong *list.SANPHAM.GiaBan | number:0)"></td>
                                </tr>
                            </tbody>

                        </table>
                    </div>
                </form>
            </div>            
        </div>
    </div>
    <div class="cart_submit">
        <button type="button" ng-click="GoHome()"><i class="fa fa-mail-reply"></i> TRANG CHỦ</button>
    </div></div>
>
<script>
    var content=@Html.Raw(Json.Encode(ViewBag.MaDB));
</script>
@section Angularjs{
    <script src="~/Scripts/PayDetail/PayDetail.js"></script>
}

